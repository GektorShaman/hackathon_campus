@using hackathon_campus.Core.ViewModels
@model hackathon_campus.Core.ViewModels.CreateCategoryViewModel

@{
    Layout = "_Layout";
}
<h1>Create</h1>
<h4>Category</h4>


<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название категории</label>
                <input asp-for="Name" class="form-control" placeholder="Придумайте название категории" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание мероприятий</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
