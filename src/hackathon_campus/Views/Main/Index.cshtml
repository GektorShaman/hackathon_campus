@using hackathon_campus.Core.ViewModels;
@model IEnumerable<EventViewModel>

@{
    Layout = "_LayoutList";
}

@foreach (var eventModel in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="wrapper"><img src="@eventModel.ImagePath" class="card-img-top" alt="..."></div>
        <div class="card-body">
            <h5 class="card-title">Описание</h5>
            <p class="card-text">@eventModel.Title</p>

        </div>
        <div class="btnMore"><a href="@Url.Action("Details", "Event",new { eventId = eventModel.Id })"> Подробнее</a></div>
        <div class="btnPodpis">Подписаться</div>
    </div>
}