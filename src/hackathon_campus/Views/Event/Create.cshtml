@using hackathon_campus.Core.ViewModels
@model hackathon_campus.Core.ViewModels.CreateEventViewModel

@{
    ViewData["Title"] = "Create";
    var categories = ViewData["Category"] as SelectList;
}
<h1>Create</h1>
<h4>Event</h4>


<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название мероприятия</label>
                <input asp-for="Title" class="form-control" placeholder="Придумайте название мероприятия" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control"
                        asp-items="@categories">
                </select>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание мероприятий</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <input type="file" asp-for="Image" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
